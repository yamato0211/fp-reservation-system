<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2>仮予約一覧</h2>
      <% @pre_appointments.each do |ap| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">講師 : <%= ap.financial_planner.name %></h5>
            <p class="card-text">メールアドレス : <%= ap.financial_planner.email %></p>
            <p class="card-text">時間 : <%= ap.time_slot.date.strftime("%Y-%m-%d") %> <%= ap.time_slot.start_time %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>予約一覧</h2>
      <% @appointments.each do |ap| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">講師 : <%= ap.financial_planner.name %></h5>
            <p class="card-text">メールアドレス : <%= ap.financial_planner.email %></p>
            <p class="card-text">時間 : <%= ap.time_slot.date.strftime("%Y-%m-%d") %> <%= ap.time_slot.start_time %></p>
            <p class="card-text">リンク : <span><%= ap.join_url.nil? ? "" : link_to(ap.join_url, ap.join_url, target: "_blank") %></span></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
